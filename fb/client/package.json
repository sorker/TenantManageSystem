{
  "name": "tenant-management-client",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run --config vitest.config.js",
    "test:integration": "vitest run --config vitest.config.js tests/integration",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "electron:dev": "cross-env NODE_ENV=development vite build --watch & electron .",
    "electron:build": "cross-env NODE_ENV=production ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES=true ELECTRON_BUILDER_USE_HARD_LINKS=false ELECTRON_BUILDER_USE_SYMLINKS=false vite build && electron-builder",
    "electron:preview": "cross-env NODE_ENV=production electron ."
  },
  "dependencies": {
    "axios": "^1.9.0",
    "echarts": "^5.4.3",
    "element-plus": "^2.3.9",
    "pinia": "^2.1.6",
    "vue": "^3.3.4",
    "vue-echarts": "^7.0.3",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/test-utils": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "eslint": "^8.46.0",
    "eslint-plugin-vue": "^9.16.1",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.2",
    "rollup-plugin-visualizer": "^6.0.0",
    "sass": "^1.66.1",
    "vite": "^4.4.9",
    "vitest": "^0.34.4"
  },
  "build": {
    "appId": "com.tenant.management",
    "productName": "租户管理系统",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "租户管理系统"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/7zip-bin/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/7zip-bin/win/x64/7za.exe",
        "to": "7zip-bin/win/x64/7za.exe"
      }
    ]
  }
}
